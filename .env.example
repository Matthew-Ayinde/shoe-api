# ============================================================================
# SHOE ECOMMERCE API - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=5000

# Frontend URL (for CORS and redirects)
CLIENT_URL=http://localhost:3000

# Admin dashboard URL
ADMIN_URL=http://localhost:3001

# Staff dashboard URL  
STAFF_URL=http://localhost:3002

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB connection string
# Local: mongodb://localhost:27017/shoe-ecommerce
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/shoe-ecommerce
MONGODB_URI=mongodb://localhost:27017/shoe-ecommerce

# Test database (used during testing)
MONGODB_TEST_URI=mongodb://localhost:27017/shoe-ecommerce-test

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# JWT secret key (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration time
JWT_EXPIRE=7d

# Admin creation secret (optional, for additional security)
ADMIN_CREATION_SECRET=your-admin-secret-key

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email service provider (gmail, outlook, etc.)
EMAIL_SERVICE=gmail

# Email credentials
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# From email address
EMAIL_FROM=noreply@shoestore.com

# ============================================================================
# CLOUDINARY (IMAGE STORAGE)
# ============================================================================

# Cloudinary credentials (get from cloudinary.com)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================================================
# STRIPE PAYMENT PROCESSING
# ============================================================================

# Stripe secret key (get from stripe.com dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe publishable key (for frontend)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe webhook secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================================
# GOOGLE OAUTH
# ============================================================================

# Google OAuth credentials (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# PUSH NOTIFICATIONS
# ============================================================================

# VAPID keys for web push notifications (generate using web-push library)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=your-email@example.com

# ============================================================================
# REDIS (CACHING & SESSIONS)
# ============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW=900000

# Max requests per window
RATE_LIMIT_MAX=100

# ============================================================================
# FILE UPLOAD LIMITS
# ============================================================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# Maximum number of files per upload
MAX_FILES_PER_UPLOAD=10

# ============================================================================
# SECURITY
# ============================================================================

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Session secret
SESSION_SECRET=your-session-secret

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Shipping API credentials (if using external shipping service)
SHIPPING_API_KEY=your-shipping-api-key
SHIPPING_API_SECRET=your-shipping-api-secret

# SMS service credentials (if using SMS notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Enable debug mode
DEBUG=true

# Enable API documentation
ENABLE_API_DOCS=true

# Seed database on startup (development only)
SEED_DATABASE=false

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# SSL/TLS settings (production only)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Database connection pool settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Cache TTL (in seconds)
CACHE_TTL=3600

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
